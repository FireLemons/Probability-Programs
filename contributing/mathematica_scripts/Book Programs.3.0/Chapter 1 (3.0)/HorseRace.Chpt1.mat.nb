Cell[TextData[
"Clear[HorseRace];\nHorseRace[n_] :=\nBlock[{x,\n       winningstable = \
Table[0, {j, 1, 4}]\n      },\n      For[i = 1, i <= n, i++,\n          x = \
Random[];\n          Which[(x < .3),\n                Block[{},\n             \
         Print[\"Acorn wins\"];\n                      winningstable[[1]]++\n \
                    ],\n                (x < .7),\n                Block[{},\n\
                      Print[\"Balky wins\"];\n                      \
winningstable[[2]]++\n                     ],\n                (x < .9),\n    \
            Block[{},\n                      Print[\"Chestnut wins\"];\n      \
                winningstable[[3]]++\n                     ],\n               \
 True,\n                Block[{},\n                      Print[\"Dolby \
wins\"];\n                      winningstable[[4]]++\n                     ]\n\
               ];\n         ];\n      Return[winningstable/n//N]\n     ]"], 
  "Input",
  InitializationCell->True,
  AspectRatioFixed->True],

